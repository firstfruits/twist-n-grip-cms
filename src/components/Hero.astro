---
interface Props {
  hero: {
    title: string;
    subtitle: string;
    description: string;
    image: string;
    primaryBtnText: string;
    secondaryBtnText: string;
    phoneNumber: string;
  };
}

const { hero } = Astro.props;
---

<section
  class="relative w-full h-screen bg-cover bg-center grayscale-25"
  style={`background-image: url('${hero.image}');`}
>
  <div class="absolute inset-0 bg-black/60"></div>

  <div
    class="relative z-10 flex flex-col items-center justify-center h-full text-center text-white px-4"
  >
    <h1 class="text-4xl md:text-5xl font-bold drop-shadow-lg">
      {hero.title}
    </h1>
    <h2 class="text-lg font-extralight my-3 text-white drop-shadow-md">
      {hero.subtitle}
    </h2>
    <p
      class="text-sm md:text-base max-w-lg mb-6 text-white drop-shadow-sm font-thin"
    >
      {hero.description}
    </p>

    <div class="flex gap-4 mb-8">
      <a
        href="#products"
        class="bg-[#C83B2A] hover:bg-[#C83B2A]/80 text-white font-bold py-2 px-6 rounded-[6px] text-sm cursor-pointer transition-colors flex items-center justify-center"
      >
        {hero.primaryBtnText}
      </a>
      <a
        href={`tel:${hero.phoneNumber}`}
        class="bg-[#C83B2A] hover:bg-[#c4321b]/80 text-white font-bold py-2 px-6 rounded-[6px] text-sm flex items-center gap-2.5 cursor-pointer transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-3.5 h-3.5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z"
          ></path>
        </svg>
        {hero.secondaryBtnText}
      </a>
    </div>

    <p
      class="text-xs md:text-[15px] font-semibold tracking-wide uppercase drop-shadow-sm"
    >
      FREE SHIPPING FOR ORDERS OVER $45
    </p>
  </div>
</section>
