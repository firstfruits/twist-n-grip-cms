---
import { getEntry } from "astro:content";

const footerEntry = await getEntry("settings", "footer");
const { brand, contact, information, copyright } = footerEntry.data;
---

<footer class="bg-[#111629] text-gray-300 py-12">
  <div class="max-w-[1240px] mx-auto px-4 md:px-8">
    <div
      class="grid grid-cols-1 md:grid-cols-3 gap-12 border-b border-gray-800 pb-12"
    >
      {/* Brand Column */}
      <div class="space-y-4">
        <h3 class="text-white text-xl font-bold">{brand.title}</h3>
        <p class="text-[13px] leading-relaxed max-w-xs text-gray-300">
          {brand.description}
        </p>
      </div>

      {/* Contact Column */}
      <div class="space-y-4">
        <h3 class="text-white text-[13px] font-bold uppercase tracking-wider">
          Contact
        </h3>
        <div class="space-y-3 text-gray-300">
          <div class="flex items-center gap-3 text-[13px]">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-5 h-5 text-gray-400"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z"
              ></path>
            </svg>
            <span>{contact.phone}</span>
          </div>
          <div class="flex items-center gap-3 text-[13px] text-gray-300">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-5 h-5 text-gray-400"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75"
              ></path>
            </svg>
            <a
              href={`mailto:${contact.email}`}
              class="hover:text-white transition-colors">{contact.email}</a
            >
          </div>
        </div>
      </div>

      {/* Information Column */}
      <div class="space-y-4">
        <h3 class="text-white text-[13px] font-bold uppercase tracking-wider">
          Information
        </h3>
        <ul class="space-y-2 text-[13px] text-gray-300">
          {information.map((item) => <li>{item.text}</li>)}
        </ul>
      </div>
    </div>

    {/* Copyright */}
    <div class="pt-8 text-center text-xs text-gray-400">
      <p>{copyright}</p>
    </div>
  </div>
</footer>
